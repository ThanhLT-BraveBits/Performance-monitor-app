# Database Configuration
# For production, use PostgreSQL connection string
# Example: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL="postgresql://user:password@localhost:5432/shopify_performance_monitor"

# Google PageSpeed Insights API Key
# Get from: https://developers.google.com/speed/docs/insights/v5/get-started
GOOGLE_PAGESPEED_API_KEY="your_google_pagespeed_api_key_here"

# Cron Job Secret for automated measurements
# Generate a secure random string (recommended: 32+ characters)
CRON_SECRET="your_secure_cron_secret_here"

# Next.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your_nextauth_secret_here"

# Optional: Vercel Analytics
VERCEL_ANALYTICS_ID="your_vercel_analytics_id"

# Optional: Logging
LOG_LEVEL="info"
